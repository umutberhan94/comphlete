{
	"compilerOptions": {
		"module": "Node16", // Node.js style modules
		"target": "ES2022", // Modern JavaScript
		"outDir": "out", // Specify output directory (but with noEmit: true, this is only used by esbuild)
		"lib": [
			"ES2022"
		], // Specify which JavaScript features to use
		"sourceMap": true, // Enable source maps for easier debugging
		"rootDir": "src", // Specify where source files are located
		"strict": true, // Enable strict type-checking
		"esModuleInterop": true, // Enables compatibility for ES Modules in Node.js
		"noEmit": false // Prevent TypeScript from emitting .js files, since esbuild handles bundling
	}
}